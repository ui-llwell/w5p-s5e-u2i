

page,.main{
    height: 100%;
}
.categroy-left{
    float: left;
    width: 150rpx;
    height: 100%;
    /* border-right: 1px solid #ddd; */
    box-sizing: border-box;
    background: #f2f2f2;
    font-size: 28rpx;
}
.categroy-left .cate-list{
  color: #8E8E8E;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    border-left: 8rpx solid #f2f2f2;
}
.categroy-left .cate-list.on{
    color: #000;
    border-color: #FF0000;
    background: #fff;
    font-weight: 600;
}
.categroy-right{
    float: right;
    width: 600rpx;
    height: 100%;
    overflow: hidden;
    
}
.cate-box{
    height: 100%;
    padding:25rpx;
    box-sizing: border-box;
    overflow-y: scroll;
}
.cate-box .cate-banner image{
    display: block;
    width: 100%;
    height: 190rpx;
}
.cate-title{
   
    height: 30rpx;
    line-height: 30rpx;
    padding:28rpx 0 40rpx;
    color: #9b9b9b;
    font-size: 24rpx;
}

.product-list{
    display: inline-block;
    width: 160rpx;
    height: 200rpx;
    text-align: center;
    margin:0 20rpx 40rpx 0;
    font-size: 24rpx;
}
.product-list image{
    width: 140rpx;
    height: 140rpx;
    margin-bottom: 14rpx;
}
.product-list:nth-child(3n){
    margin-right: 0;
}