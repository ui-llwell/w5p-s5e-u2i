/**show.wxss**/
.commodityImages {
  width: 100%;
  height: 380rpx;
  position: relative;
}
.commodityImages swiper, .commodityImages swiper-item, .commodityImages block, .commodityImages image{
  width: 100%;
  height: 100%;
}
.headline{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* border-bottom: 1px solid #f2f2f2; */
  font-size: 28rpx;
  background: #f9f9f9;
}
.unit {
   /* height: 580rpx;  */
   background: #fff;
   margin-bottom: 10rpx;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}
.unit .uppic{
  height: 340rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.unit .uppic image{
  width: 300rpx;
  height: 300rpx;
}
.unit .uppic .iconDefault{
  position: absolute;
  top: 40rpx;
  left: 0;
  width: 230rpx;
  height: 60rpx; 
  background: url('http://llwell-wxapp.oss-cn-beijing.aliyuncs.com/Rating/home/status_in_progress@3x.png') no-repeat ;
  background-size:contain; 
}
.unit .title{
  
  font-size: 24rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
   padding: 0 35rpx; 
}
.unit .title .price{
  font-family:Arial, Helvetica, sans-serif;
  color: #FF0000;
  font-size: 48rpx;
  font-weight: 600;
  vertical-align:middle;
}
.unit .title .sign{
  border: 1px solid #FF0D0D;
  padding: 0rpx 15rpx;
  color: #FF0000;
  margin: 0 10rpx ;
  border-radius: 3rpx;
  vertical-align:middle;
}
.unit .title .mes{
  vertical-align:middle;
  color: #000;
}

.unit .word {
  padding:0 35rpx;
  color: #999;
  font-size: 24rpx;
}
.unit .word .detail view{
  margin: 20rpx 0;
}
.unit .word .btn{
   width: 250rpx;
  height: 100rpx; 
  background: url('http://llwell-wxapp.oss-cn-beijing.aliyuncs.com/Rating/home/btn_status_closed_buy_now@3x.png') no-repeat ;
  background-size:100% 100%;
  margin-top: 50rpx; 
}
.unit .word .btnForword{
  width: 250rpx;
  height: 100rpx;
  background: #008AFF;
  color: #fff;
  border: 2px solid #008AFF;
  /* margin-top: 50rpx; */
}